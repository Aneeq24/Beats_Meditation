<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/seekbarUnselectedColor" />
            <stroke
                android:width="1dp"
                android:color="@color/seekbarSelectedColor" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@color/seekbarSelectedColor" />
                <solid android:color="@color/seekbarSelectedColor" />
                <corners android:radius="2dp" />
            </shape>
        </clip>
    </item>

</layer-list>